<!--Blog Index - List of blogs-->

@model IEnumerable<Models.Blog>

@{
    ViewBag.Title = "Blog Listing";
}

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>Title</th>
        <th>Posted By</th>
        <th>Date Posted</th>
    </tr>


    @foreach (var blog in Model)
    {
        <tr>
            <td>@Html.ActionLink(blog.Title, "Blogs", "Blog", new { id = blog.ID }, null)</td>
            <td>@Html.ActionLink(blog.PostedBy, "Details", "User", new { id = blog.UserID }, null)</td>
            <td>@Html.DisplayFor(modelItem => blog.CreateDate)</td>
        </tr>
    }
</table>



<p>
    @Html.ActionLink("Create new blog", "Create", "Blog")
</p>