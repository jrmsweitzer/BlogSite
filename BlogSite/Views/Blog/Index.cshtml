@using PerpetuumSoft.Knockout
@model Models.KO.Blogs
@{
    var ko = Html.CreateKnockoutContext();
    ViewBag.Title = "Blog Listing";
}

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Title</th>
            <th>Posted By</th>
            <th>Date Posted</th>
        </tr>
    </thead>
    
    <tbody data-bind="foreach: blogs">
        @using (var blogs = ko.Foreach(m => m.ListBlogs))
        {
            <tr>
                <td @blogs.Bind.Text(m => m.Title)></td>
                <td @blogs.Bind.Text(m => m.PostedBy)></td>
                <td @blogs.Bind.Text(m => m.CreateDate)></td>
            </tr>
        }
    </tbody>
</table>



<p>
    @Html.ActionLink("Create new blog", "Create", "Blog")
</p>



<br />~~~~~~~~~~~~~~~~~~~~~~

@foreach (Models.Blog blog in new Services.Impl.BlogService().GetBlogs())
{
    <div>
        <a onclick="goToBlog(@blog.ID)">@blog.Title</a>
    </div>
}

