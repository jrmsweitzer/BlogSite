@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<BlogSiteNancy.Views.Account.ViewModels.ChangePasswordModel>

@{
    Layout = "Views/Shared/_Layout.cshtml";
    var _vm = BlogSiteNancy.Utils.AppViewModel.GetAppViewModel();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container col-md-4 col-md-offset-4">
        <div class="row">
            <div class="box">
                <div class="text-center">
                    <form action="/account/changepassword/" method="post" class="col-md-12">
                        <table class="col-md-12 col-md-offset-0">
                            @if (@Model.Successes != null && Model.Successes.Count > 0)
                            {
                                foreach (var success in @Model.Successes)
                                {
                                    <tr>
                                        <td class="successMessage">@success</td>
                                    </tr>
                                }
                            }
                            @if (@Model.Failures != null)
                            {
                                foreach (FluentValidation.Results.ValidationFailure failure in @Model.Failures)
                                {
                                    <tr>
                                        <td class="errorMessage">@failure.ErrorMessage</td>
                                    </tr>
                                }
                            }
                            <tr>
                                <td><input type="password" name="OldPassword" placeholder="Old Password" class="col-sm-12 form-control" id="OldPassword"/></td>
                            </tr>
                            <tr>
                                <td><input type="password" name="NewPassword" placeholder="New Password" class="col-sm-12 form-control" id="NewPassword"/></td>
                            </tr>
                            <tr>
                                <td><input type="password" name="ConfirmNewPassword" placeholder="Confirm New Password" class="col-sm-12 form-control" id="ConfirmNewPassword"/></td>
                            </tr>
                            <tr>
                                <td colspan="2"><input type="submit" value="Change Password" razor class="btn btn-success col-sm-12" id="ChangePasswordBtn" /></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
