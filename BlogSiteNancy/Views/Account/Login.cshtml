@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<BlogSiteNancy.Views.Account.ViewModels.LoginModel>

@{
    Layout = "Views/Shared/_Layout.cshtml";
    var _vm = BlogSiteNancy.Utils.AppViewModel.GetAppViewModel();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container col-md-4 col-md-offset-4">
        <div class="row">
            <div class="box">
                <div class="text-center">
                    <form action="/account/login/" method="post" class="col-md-12">
                        <table class="col-md-12 col-md-offset-0">
                            @if (@Model.Failures != null)
                            {
                                foreach (FluentValidation.Results.ValidationFailure failure in @Model.Failures)
                                {
                                    <tr id="Error">
                                        <td class="errorMessage">@failure.ErrorMessage</td>
                                    </tr>
                                }
                            }
                            <tr>
                                <td><input type="text" name="Username" placeholder="Username" class="col-sm-12 form-control" value="@Model.Username" id="LoginInput"/></td>
                            </tr>
                            <tr>
                                <td><input type="password" name="Password" placeholder="Password" class="col-sm-12 form-control" id="PasswordInput"/></td>
                            </tr>
                            <tr>
                                <td colspan="2"><input type="submit" class="btn btn-success col-sm-12" value="Login" razor id="LoginButton"/></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
