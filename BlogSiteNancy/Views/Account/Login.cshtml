@using Nancy.ViewEngines.Razor
@using FluentValidation.Results
@using BlogSiteNancy.Views.Account.ViewModels

@inherits NancyRazorViewBase<LoginModel>

@{
    Layout = "Views/Shared/_Layout.cshtml";
    var _vm = BlogSiteNancy.Utils.AppViewModel.GetAppViewModel();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container col-md-4 col-md-offset-4 row box text-center">
        <form action="/account/login/"
              class="col-md-12 col-md-offset-0"
              id="LoginForm"
              method="post">

            <!-- Errors -->
            @if (@Model.Failures != null)
            {
                foreach (ValidationFailure failure in @Model.Failures)
                {
                    <label class="errorMessage"
                           id="Error">
                        @failure.ErrorMessage
                    </label>
                }
            }

            <!-- Username Input -->
            <input class="col-md-12 form-control"
                   id="LoginUsername"
                   name="Username"
                   placeholder="Username"
                   type="text"
                   value="@Model.Username" />

            <!-- Password Input -->
            <input class="col-md-12 form-control"
                   id="LoginPassword"
                   name="Password"
                   placeholder="Password"
                   type="password" />

            <!-- Login Button -->
            <input class="btn btn-success col-sm-12"
                   id="LoginButton"
                   name="Login"
                   type="submit"
                   value="Login" razor />
        </form>
    </div>
</body>
</html>
